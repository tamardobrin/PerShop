@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers 

@model WebProject.Models.Animal

@{
    ViewBag.Title = "AddAnimalPage";
   
}
<style>
	* {
    font-family: 'Baloo 2', cursive;
	}
    footer{
        position: absolute;right: 0;bottom: 0;left: 0;
    }
</style>
<form method="post" asp-action="Add">
    <h1 class="h3 mb-3 fw-normal">Add Animal</h1>
    <div class="form-floating">
        <input asp-for="Id" value="@ViewBag.currentAnimalId" class="form-control" type="hidden" />
		<input type="hidden" asp-for="Comments" value="@ViewBag.demoComnentsList">
    </div>
    <div class="form-floating">
        <input asp-for="Name" placeholder="Animal Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-floating">
        <input asp-for="Price" placeholder="Animal Price" />
        <span asp-validation-for="Price"></span>
    </div>
    <div class="form-floating">
        <input asp-for="PictureName" placeholder="Picture url" />
        <span asp-validation-for="PictureName"></span>
    </div>
    <div class="form-floating">
        <input asp-for="Description" placeholder="Description" />
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-floating">
        <fieldset>
        <p class="SearchByCategory"> Category:</p> <select id="categoryId" name="categoryId">

            <option value="1">Cats</option>

            <option value="2">Fish</option>


            <option value="3">Rodents</option>

        </select>
    </fieldset>
    </div>
     <div>
        <input type="submit" />
    </div>
  </form>

