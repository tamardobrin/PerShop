@model WebProject.Models.Person

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewBag.Title = "ValidationAction";
}


<style>
    
   .fa-solid, div{
        margin: 10px;
    }
    footer{
        position: absolute;right: 0;bottom: 0;left: 0;
    }
</style>


<div id="likebody" class="text-center">

<main class="form-signin w-100 m-auto">
  <form method="post" asp-action="ValidationForForm">
<i class="fa-solid fa-arrow-right-to-bracket fa-2xl"></i>
    <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

    <div class="form-floating">
        <i class="fas fa-lock prefix"></i>
        <input asp-for="Password" placeholder="Password" />
        <span asp-validation-for="Password"></span>
    </div>

    <div class="form-floating">
         <i class="fas fa-envelope prefix"></i>
        <input asp-for="Email" placeholder="name@example.com" />
        <span asp-validation-for="Email"></span>
    </div>
     <div>
        <input type="submit" value="submit" class="btn btn-outline-dark btn-sm"/>
    </div>
  </form>
</main>
</div>

